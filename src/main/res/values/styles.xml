<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScannerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/hbm_blue_dark</item>
        <item name="colorPrimary">@color/hbm_blue</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SettingsTheme" parent="ScannerTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="DetailsHeading" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsTextView" parent="DetailsText">
        <item name="android:textColor">@color/details_text_color</item>
    </style>

    <style name="DetailsLabelView" parent="DetailsText">
        <item name="android:textColor">@color/details_label_color</item>
    </style>

</resources>
