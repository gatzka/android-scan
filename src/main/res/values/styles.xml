<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScannerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/hbm_blue_dark</item>
        <item name="colorPrimary">@color/hbm_blue</item>
    </style>

    <style name="DetailsHeading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsTextView" parent="DetailsText">
        <item name="android:textColor">@color/details_text_color</item>
    </style>

    <style name="DetailsLabel" parent="DetailsText">
        <item name="android:textColor">@color/details_label_color</item>
    </style>

</resources>
